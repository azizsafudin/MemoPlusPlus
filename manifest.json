{
  "manifest_version": 2,
 
  "name": "Memo++",
  "version": "0.4.4",
  "description": "A memo.cash extension",
  "icons": 
  {
    "16": "ext_16.png",
    "48": "ext_48.png",
    "128": "ext_128.png" 
  },
  "permissions": [
    "https://publish.twitter.com/*",
    "https://api.instagram.com/*"
  ],
  "web_accessible_resources": [
    "assets/*.woff2"
  ],
  "content_scripts": [{
    "css": ["styles.css"],
    "js": [
            "jquery.min.js",
            "favico.min.js",
            "main.js", 
            "settings.js",
            "defaults.js",
            "muteusers.js",
            "verifyUsers.js",
            "neverEndingMemo.js",
            "pollsUI.js",
            "parseMemos.js"
          ],
    "matches": ["https://memo.cash/*"],
    "run_at": "document_end"
  }],
  "applications": {
    "gecko": {
      "id": "memoplusplus@modulus.cash",
      "strict_min_version": "42.0"
    }
  }
 
}