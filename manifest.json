{
  "manifest_version": 2,
 
  "name": "Memo++",
  "version": "0.4.10",
  "description": "A memo.cash extension",
  "icons": 
  {
    "16": "assets/img/ext_16.png",
    "48": "assets/img/ext_48.png",
    "128": "assets/img/ext_128.png"
  },
  "permissions": [
    "https://publish.twitter.com/*",
    "https://api.instagram.com/*",
    "https://chainfeed.org/stream"
  ],
  "web_accessible_resources": [
    "assets/*.woff2"
  ],
  "content_scripts": [{
    "css": ["styles.css"],
    "js": [
            "assets/js/jquery.min.js",
            "assets/js/favico.min.js",
            "assets/js/chainfeed.js",
            "src/main.js", 
            "src/settings.js",
            "src/defaults.js",
            "src/getUpdates.js",
            "src/muteUsers.js",
            "src/verifyUsers.js",
            "src/neverEndingMemo.js",
            "src/pollsUI.js",
            "src/parseMemos.js"
          ],
    "matches": ["https://memo.cash/*"],
    "run_at": "document_end"
  }]
 
}